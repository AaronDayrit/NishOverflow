@*@model Project_3_StackOverflow.Models.Question*@
@model Project_3_StackOverflow.Models.ViewModels.DetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Upvotes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Upvotes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.UploadDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Answered)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.Question.Answered)*@
            @*@if (!Model.Question.Answered)
            {
                <p>Unanswered</p>
            }
            else
            {
                <p>Answered</p>
            }*@
            <p>@Model.Question.Answered</p>
        </dd>

    </dl>
</div>

<h4>Answers</h4>
@foreach (var answer in Model.Answers)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-10">
                @answer.Title
            </dt>
            <dd class="col-sm-10">
                @answer.Description
            </dd>

            <dd class="col-sm-10">
                @answer.Upvotes
            </dd>
    
            <dd class="col-sm-10">
                @answer.UploadDate
            </dd>
        </dl>
    </div>
}

<div>
    <hr />
    <h3>Edit Question</h3>
    <a asp-action="Edit" asp-route-id="@Model?.Question.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
